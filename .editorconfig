root = true

# Basic line‑ending / charset handling
[*]
charset               = utf-8
end_of_line           = lf
insert_final_newline  = true
trim_trailing_whitespace = true

[*.{py,pyi}]
indent_style          = space
indent_size           = 4
# Keep a single blank line at the end of the file (already enforced by insert_final_newline)
# No special handling for trailing whitespace – keep the global rule

[*.{json,jsonc,json5}]
indent_style          = tab
indent_size           = 2
# JSON does not allow trailing commas, but whitespace handling is still useful
trim_trailing_whitespace = true
max_line_length       = 120

[*.{yml,yaml}]
indent_style          = space
indent_size           = 2
trim_trailing_whitespace = true
max_line_length       = 120

[*.{md,markdown}]
indent_style          = space
indent_size           = 2
# In Markdown a line that ends with two spaces is a hard line‑break,
# so we *disable* trailing‑whitespace trimming for these files.
trim_trailing_whitespace = false
max_line_length       = 120
# Keep the final newline (useful for many tools)
insert_final_newline  = true

[*.{sh,bash,zsh,csh,ksh,fish,ps1}]
indent_style          = tab
indent_size           = 4
trim_trailing_whitespace = true

# .gitignore, .gitattributes, .editorconfig, and other dot‑files
[.*]
indent_style          = space
indent_size           = 2
trim_trailing_whitespace = true
# These files are usually short, so we don’t enforce a line‑length limit.

[*.{csv,tsv,log}]
trim_trailing_whitespace = false
insert_final_newline      = false
